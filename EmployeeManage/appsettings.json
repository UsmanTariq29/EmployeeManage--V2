{
  "Voucher": {
    "Length": 6,
    "Padding": "1"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "FileUpload": {
    "RootPath": "C:\\ApplicationUploads\\EmployeeManagement\\",
    "Config": {
      "ClientProfilePicture": {
        "RelativeUploadPath": "ClientProfilePicture",
        "MaximumFileCount": 1,
        "AllowedExtensions": [
          ".png",
          ".jpg",
          ".jpeg"
        ],
        "MaxFileSizeBytes": 10240
      },
      "UserProfilePicture": {
        "RelativeUploadPath": "UserProfilePicture",
        "MaximumFileCount": 1,
        "AllowedExtensions": [
          ".png",
          ".jpg",
          ".jpeg"

        ],
        "MaxFileSizeBytes": 10240
      },
      "EmployeeDocument": {
        "RelativeUploadPath": "EmployeeDocument",
        "MaximumFileCount": 5,
        "AllowedExtensions": [
          ".png",
          ".jpg",
          ".jpeg",
          ".pdf"

        ],
        "MaxFileSizeBytes": 5120000
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "value": "Microsoft"
      }
    },

    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Environment": "Development"
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "tableName": "TblItemsPriceLog",
          "restrictedToMinimumLevel": "LogEventLevel.Information",
          "columnOptions": "columnOptions",
          "autoCreateSqlTable": true
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "My Key": "My key from Appsettings.json File",
  "ConnectionStringNameSuffix": "EMPLOYEE_MANAGEMENT"
 // "ConnectionStringNameSuffix": "USER_MANAGEMENT"
}
